  position fixed
  display flex
  justify-content center
  align-items center
  left 0
  right 0
  top 0
  bottom 0
  background rgba(0, 0, 0, 0.7)
  z-index 1600
  transition all 0.1s linear 0s
  &.fade-enter-active, &.fade-leave-active
    opacity 1
  &.fade-enter, &.fade-leave-active
    opacity 0
  img
